<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ad Soyad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:layout_marginEnd="8dp"
                app:tint="#2196F3" />

            <TextView
                android:id="@+id/tvAdSoyad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ali Veli"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333" />

        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_dialog_email"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="2dp"
                app:tint="#666" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ali.veli@email.com"
                android:textSize="14sp"
                android:textColor="#666" />

        </LinearLayout>

        <!-- TC -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="#666" />

            <TextView
                android:id="@+id/tvTC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12345678901"
                android:textSize="14sp"
                android:textColor="#666" />

        </LinearLayout>

        <!-- Cinsiyet -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/ivCinsiyetIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="2dp"
                app:tint="#666" />

            <TextView
                android:id="@+id/tvCinsiyet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Erkek"
                android:textSize="14sp"
                android:textColor="#666" />

        </LinearLayout>

        <!-- Doğum Tarihi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_today"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="2dp"
                app:tint="#666" />

            <TextView
                android:id="@+id/tvDogumTarihi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/1990"
                android:textSize="14sp"
                android:textColor="#666" />

        </LinearLayout>

        <!-- Kayıt ve Güncelleme Tarihleri -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvKayitTarihi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kayıt: 01/01/2024"
                android:textSize="12sp"
                android:textColor="#999"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvGuncellemeTarihi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Güncelleme: 01/01/2024"
                android:textSize="12sp"
                android:textColor="#999"
                android:textStyle="italic"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <!-- Butonlar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDuzenle"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="DÜZENLE"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconSize="16dp"
                app:backgroundTint="#4CAF50" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSil"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="SİL"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconSize="16dp"
                app:backgroundTint="#F44336" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>